<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="@drawable/background"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profile_icon_editd"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial_rounded_mt_bold"
            android:text="Easy List"
            android:textColor="@color/darkWhite"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_marginTop="-15dp"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/darkWhite"
        android:layout_marginTop="80dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="0dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:elevation="5dp"
                app:cardUseCompatPadding="true"
                android:foreground="?selectableItemBackground"
                >

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/note_bg"
                    >

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/note_image_bg"
                        android:src="@drawable/ic_note_add_black_24dp"
                        android:padding="8dp"
                        />

                    <View
                        android:layout_width="70dp"
                        android:layout_height="1dp"
                        android:background="#26707070"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:text="Notes"
                        android:textColor="@color/textColorLightBlack"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_tasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:elevation="5dp"
                app:cardUseCompatPadding="true"
                android:foreground="?selectableItemBackground"
                android:layout_marginLeft="20dp"
                >

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/task_bg"
                    >

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/task_image_bg"
                        android:src="@drawable/ic_task_black_24dp"
                        android:padding="8dp"
                        />

                    <View
                        android:layout_width="70dp"
                        android:layout_height="1dp"
                        android:background="#26707070"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:text="Task"
                        android:textColor="@color/textColorLightBlack"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:elevation="5dp"
                app:cardUseCompatPadding="true"
                android:foreground="?selectableItemBackground"
                >

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/reminder_bg"
                    >

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/reminder_image_bg"
                        android:src="@drawable/ic_alarm_add_black_24dp"
                        android:padding="8dp"
                        />

                    <View
                        android:layout_width="70dp"
                        android:layout_height="1dp"
                        android:background="#26707070"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:text="Reminder"
                        android:textSize="18sp"
                        android:textColor="@color/textColorLightBlack"
                        android:layout_marginTop="10dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:elevation="5dp"
                app:cardUseCompatPadding="true"
                android:foreground="?selectableItemBackground"
                android:layout_marginLeft="20dp"
                >

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/birthday_bg"
                    >

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/birthday_image_bg"
                        android:src="@drawable/ic_event_note_black_24dp"
                        android:padding="8dp"
                        />

                    <View
                        android:layout_width="70dp"
                        android:layout_height="1dp"
                        android:background="#26707070"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:text="Birthday"
                        android:textSize="18sp"
                        android:textColor="@color/textColorLightBlack"
                        android:layout_marginTop="10dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>