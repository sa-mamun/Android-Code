<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="251dp"
        android:background="@drawable/editdisplay"
        >

        <EditText
            android:id="@+id/editText"
            android:layout_width="255dp"
            android:layout_height="53dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="63dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:gravity="right"
            android:inputType="textPersonName"
            android:singleLine="false"
            android:text=""
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="203dp"
            android:layout_height="45dp"
            android:gravity="right"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="139dp"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:text="0" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button4"
            android:layout_width="100dp"
            android:layout_height="77dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="171dp"
            android:background="@drawable/four"
            android:text="4" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="94dp"
            android:background="@drawable/one"
            android:text="1" />

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="95dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="-2dp"
            android:background="@drawable/zero"
            android:text="0" />

        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="182dp"
            android:layout_height="100dp"
            android:background="@drawable/equal"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="93dp"
            android:layout_marginLeft="93dp"
            android:layout_marginBottom="2dp"
            android:text="=" />

        <Button
            android:id="@+id/buttonAC"
            android:layout_width="200dp"
            android:layout_height="78dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/ac"
            android:text="AC"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonDecimal"
            android:layout_width="100dp"
            android:layout_height="78dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="110dp"
            android:layout_marginRight="109dp"
            android:background="@drawable/decimal"
            android:text="." />

        <Button
            android:id="@+id/buttonDiv"
            android:layout_width="108dp"
            android:layout_height="78dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/div"
            android:text="/" />

        <Button
            android:id="@+id/button7"
            android:layout_width="100dp"
            android:layout_height="78dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="248dp"
            android:background="@drawable/seven"
            android:text="7" />

        <Button
            android:id="@+id/button5"
            android:layout_width="100dp"
            android:layout_height="77dp"
            android:background="@drawable/five"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="93dp"
            android:layout_marginLeft="93dp"
            android:layout_marginBottom="170dp"
            android:text="5" />

        <Button
            android:id="@+id/button8"
            android:layout_width="100dp"
            android:layout_height="78dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="102dp"
            android:layout_marginLeft="102dp"
            android:layout_marginBottom="248dp"
            android:background="@drawable/eight"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            android:layout_width="100dp"
            android:layout_height="78dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="110dp"
            android:layout_marginRight="110dp"
            android:layout_marginBottom="248dp"
            android:background="@drawable/nine"
            android:text="9" />

        <Button
            android:id="@+id/button6"
            android:layout_width="100dp"
            android:layout_height="77dp"
            android:background="@drawable/six"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="139dp"
            android:layout_marginRight="139dp"
            android:layout_marginBottom="170dp"
            android:text="6" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:background="@drawable/three"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="139dp"
            android:layout_marginRight="139dp"
            android:layout_marginBottom="100dp"
            android:text="3" />

        <Button
            android:id="@+id/buttonMul"
            android:layout_width="108dp"
            android:layout_height="78dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="248dp"
            android:background="@drawable/mul"
            android:text="*" />

        <Button
            android:id="@+id/buttonSub"
            android:layout_width="108dp"
            android:layout_height="77dp"
            android:background="@drawable/sub"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="170dp"
            android:text="-" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="118dp"
            android:layout_height="174dp"
            android:background="@drawable/add"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="0dp"
            android:text="+" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:background="@drawable/two"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="92dp"
            android:layout_marginLeft="92dp"
            android:layout_marginBottom="100dp"
            android:text="2" />

    </RelativeLayout>

</RelativeLayout>